        <property name="username" value="hsuforumwebmaster@gmail.com"/>
        <property name="password" value="aquarius680215"/>
        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.from">hsuforumwebmaster@gmail.com</prop>
                <prop key="mail.smtp.user">hsuforumwebmaster@gmail.com</prop>
                <prop key="mail.smtp.password">aquarius680215</prop>
