<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="1.0"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name="persistenceUnit" transaction-type="RESOURCE_LOCAL">
        
        <!-- Hibernate -->
          
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- EclipseLink -->
        <!--   
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        -->
        
        <non-jta-data-source>java:comp/env/jndi/EASDS</non-jta-data-source>
        
        
        <!-- EclipseLink -->
        <class>com.hsuforum.common.bo.impl.BaseBoImpl</class>
        <class>com.hsuforum.eas.entity.Function</class>
        <class>com.hsuforum.eas.entity.Group</class>
        <class>com.hsuforum.eas.entity.FunctionItem</class>
        <class>com.hsuforum.eas.entity.GroupFunction</class>
        <class>com.hsuforum.eas.entity.GroupFunctionPK</class>
        <class>com.hsuforum.eas.entity.Module</class>
        <class>com.hsuforum.eas.entity.User</class>
        <class>com.hsuforum.eas.entity.News</class>
        <class>com.hsuforum.eas.entity.NewsCategory</class>
        <class>com.hsuforum.eas.entity.Forum</class>
        <class>com.hsuforum.eas.entity.ForumCategory</class>
        <class>com.hsuforum.eas.entity.ForumReply</class>
        <class>com.hsuforum.eas.entity.ForumTitle</class>
        <class>com.hsuforum.eas.entity.Message</class>
        <class>com.hsuforum.eas.entity.AccessToken</class>
        <class>com.hsuforum.eas.entity.App</class>
        <class>com.hsuforum.eas.entity.Report</class>
        <properties>
            <!-- EclipseLink -->
        	<!--      
            <property name="eclipselink.logging.level" value="INFO"/>
            <property name="eclipselink.cache.shared.default" value="false"/>
            -->
            <!-- Hibernate -->
            
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.event.merge.entity_copy_observer" value="allow"/>
            
            <!-- Oracle -->
              
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
            
            <!-- MySQL -->
            <!--    
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            -->
            
            <!-- SQL Server-->
            <!--    
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServer2012Dialect"/>
            -->
            <!-- GlassFish -->
            <!--
            <property name="hibernate.transaction.manager_lookup_class"
                      value="org.hibernate.transaction.SunONETransactionManagerLookup"/>
            -->
            <!--Weblogic-->
            <!--
            <property name="hibernate.transaction.manager_lookup_class"
                      value="org.hibernate.transaction.WeblogicTransactionManagerLookup"/>
            
            
            -->
            
        </properties>
    </persistence-unit>
</persistence>