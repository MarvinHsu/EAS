<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd   http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">
    <!-- ThrowsAdvice: Handle ServiceException -->
    <bean id="expExceptionHandlingAdvice" class="com.hsuforum.eas.exception.ProjectExceptionHandlingAdvice"/>
    <!--  facade declartion -->
    <bean id="forumTitleFacade" class="com.hsuforum.eas.service.impl.ForumTitleFacadeImpl"/>
    <!--  service declartion -->
    <bean id="groupService" class="com.hsuforum.eas.service.impl.GroupServiceImpl" p:dao-ref="groupDao"/>
    <bean id="functionService" class="com.hsuforum.eas.service.impl.FunctionServiceImpl" p:dao-ref="functionDao"/>
    <bean id="userService" class="com.hsuforum.eas.service.impl.UserServiceImpl" p:dao-ref="userDao"/>
    <bean id="itemService" class="com.hsuforum.eas.service.impl.ItemServiceImpl" p:dao-ref="itemDao"/>
    <bean id="departmentService" class="com.hsuforum.eas.service.impl.DepartmentServiceImpl" p:dao-ref="departmentDao"/>
    <bean id="newsService" class="com.hsuforum.eas.service.impl.NewsServiceImpl" p:dao-ref="newsDao"/>
    <bean id="newsCategoryService" class="com.hsuforum.eas.service.impl.NewsCategoryServiceImpl"
          p:dao-ref="newsCategoryDao"/>
    <bean id="forumCategoryService" class="com.hsuforum.eas.service.impl.ForumCategoryServiceImpl"
          p:dao-ref="forumCategoryDao"/>
    <bean id="forumService" class="com.hsuforum.eas.service.impl.ForumServiceImpl" p:dao-ref="forumDao"/>
    <bean id="forumTitleService" class="com.hsuforum.eas.service.impl.ForumTitleServiceImpl" p:dao-ref="forumTitleDao"/>
    <bean id="forumReplyService" class="com.hsuforum.eas.service.impl.ForumReplyServiceImpl"
          p:dao-ref="forumReplyDao"/>
    <bean id="messageService" class="com.hsuforum.eas.service.impl.MessageServiceImpl" p:dao-ref="messageDao"/>
    <bean id="accessTokenService" class="com.hsuforum.eas.service.impl.AccessTokenServiceImpl"
		p:dao-ref="accessTokenDao"/>
	<bean id="appService" class="com.hsuforum.eas.service.impl.AppServiceImpl"
		p:dao-ref="appDao"/>
	<bean id="reportService" class="com.hsuforum.eas.service.impl.ReportServiceImpl"
		p:dao-ref="reportDao"/>
    <!-- logicContext: codegen begin -->


    <!-- logicContext: codegen end -->
    <aop:config>
        <aop:pointcut id="dbOperation1" expression="execution(* com.hsuforum..*Service.*(..))"/>
        <aop:advisor advice-ref="txAdvice" pointcut-ref="dbOperation1"/>
    </aop:config>
    <aop:config>
        <aop:pointcut id="dbOperation2" expression="execution(* com.hsuforum..*Facade.*(..))"/>
        <aop:advisor advice-ref="txAdvice" pointcut-ref="dbOperation2"/>
    </aop:config>
</beans>
