<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
	<persistence-unit name="persistenceUnit"
		transaction-type="JTA">

		<!-- Hibernate -->

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<jta-data-source>jndi/EASXADS</jta-data-source>

		<class>com.hsuforum.common.bo.impl.BaseBoImpl</class>
        <class>com.hsuforum.eas.entity.Function</class>
        <class>com.hsuforum.eas.entity.Group</class>
        <class>com.hsuforum.eas.entity.FunctionItem</class>
        <class>com.hsuforum.eas.entity.GroupFunction</class>
        <class>com.hsuforum.eas.entity.GroupFunctionPK</class>
        <class>com.hsuforum.eas.entity.Module</class>
        <class>com.hsuforum.eas.entity.User</class>
        

		<properties>

			<!-- Hibernate -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.SQLServer2012Dialect" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.transaction.manager_lookup_class"
				value="org.hibernate.transaction.WeblogicTransactionManagerLookup" />
			<property name="hibernate.transaction.jta.platform"
				value="org.hibernate.service.jta.platform.internal.WeblogicJtaPlatform" />	
			
		</properties>
	</persistence-unit>

</persistence>